<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Make your main theme support day/night switching -->
    <style name="Theme.ModuleThreeAssignmentKalebWard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fix for Material Slider - Add required background colors -->
        <item name="android:windowBackground">?android:attr/windowBackground</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primary_text</item>
    </style>
</resources>